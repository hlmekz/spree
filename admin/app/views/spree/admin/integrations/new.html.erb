<% content_for :page_title do %>
  <%= page_header_back_button spree.admin_integrations_path %>
  <%= Spree.t(:connect) %> <%= @integration.name %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @integration } %>

<%= form_for @integration, as: :integration, url: spree.admin_integrations_path do |form| %>
  <%= form.hidden_field :type %>
  <%= form.hidden_field :active, value: true %>

  <%= render partial: "spree/admin/integrations/forms/#{@integration.form_partial_name}", locals: { form: form } %>
  <%= render 'spree/admin/integrations/form_actions', integration: @integration %>
<% end %>
