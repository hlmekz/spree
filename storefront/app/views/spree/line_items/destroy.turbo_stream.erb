<%= turbo_stream.replace_all '.cart-contents' do %>
  <% cart_id = "cart-contents#{@order.present? ? "-#{@order.id}-#{@order.updated_at.to_i}" : ""}" %>
  <%= turbo_frame_tag cart_id, class: 'cart-contents' do %>
    <% if @order.line_items.empty? %>
      <%= render 'spree/orders/empty' %>
    <% else %>
      <%= render 'spree/orders/cart' %>
    <% end %>
  <% end %>
<% end %>

<%= spree_turbo_update_cart(@order) %>
