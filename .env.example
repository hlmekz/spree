# Spree Commerce Environment Variables for Coolify Deployment

# Database Configuration
DATABASE_URL=postgresql://username:password@postgres:5432/spree_production

# Redis Configuration (for background jobs and caching)
REDIS_URL=redis://redis:6379/0

# Rails Secret Key Base (generate with: rails secret)
SECRET_KEY_BASE=your_secret_key_base_here

# Rails Environment
RAILS_ENV=production
RACK_ENV=production

# Application Settings
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_TO_STDOUT=true

# Spree Configuration
SPREE_FRONTEND_AUTO_CAPTURE=true
SPREE_ALLOW_SSL_IN_PRODUCTION=true

# Email Configuration (optional)
# SMTP_ADDRESS=smtp.gmail.com
# SMTP_PORT=587
# SMTP_DOMAIN=yourdomain.com
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_AUTHENTICATION=plain
# SMTP_ENABLE_STARTTLS_AUTO=true

# File Storage (optional - for production use S3 or similar)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-spree-bucket

# Application Host
RAILS_FORCE_SSL=false
HOST=localhost:3000

# Port (Coolify will set this automatically)
PORT=3000